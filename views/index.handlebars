<h1>Burger Time!</h1>

<div class="parent-container">
    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Burgers Ready To Be EATEN!</h2>

                <ul>
                    {{#each burger}}
                    {{#unless devoured}}
                    {{> burgers/burgers-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Eaten Burgers</h2>

                <ul>
                    {{#each cats}}
                    {{#if sleepy}}
                    {{> burgers/burgers-block devoured=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<h2>Create your own burger.</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="name" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Eaten<br>
        <input type="radio" name="devoured" value="0"> Uneaten
    </div>

    <button type="submit">Add Your Burger Creation!</button>
</form>